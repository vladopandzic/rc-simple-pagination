{
  "compilerOptions": {
    "outDir": "build/dist",
   "module": "commonjs",
    "target": "es5",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "allowJs": true, 
    "jsx": "react",
    "moduleResolution": "node",
    "noImplicitReturns": false,
    "noImplicitThis": true,
    "noImplicitAny": false,
    "strictNullChecks": false
  },
  "exclude": [
    "node_modules",
    "build",
    "scripts",
    "typings",
    "acceptance-tests",
    "webpack",
    "jest",
    "src/setupTests.ts"
  ],
  
  "types": [
    "typePatches"
  ]
}

